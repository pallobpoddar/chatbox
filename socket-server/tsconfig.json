{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@shared/*": ["../shared/dist/*"]
    },
    "typeRoots": ["./src/types/"]
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts", "../shared/dist/*"],
  "exclude": ["src/**/*.test.ts", "../node_modules"]
}
